int n,a,sum,i;
    do{
        printf("n = ");
        scanf("%d", &n);
    }
    while(n < 1);

    printf("\n");
    printf("a = ");
    scanf("%d", &a);
    if(a % 3 == 0){
        sum = a;
    }
    else{
        sum = 0;
    }
    i = 1;
    while(n > i){
        printf("a = ");
        scanf("%d", &a);
        if(a % 3 == 0){
            sum = sum + a;
        }
        i++;
    }
    printf("Sum = %d", sum);