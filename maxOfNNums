int a,n,max,i;
    do{
        printf("n = ");
        scanf("%d", &n);
    }
    while(n < 1);

    i = 1;
    printf("Number %d = ", i);
    scanf("%d", &a);
    max = a;
    while(n > i){
        i++;
        printf("Number %d = ", i);
        scanf("%d", &a);
        if(a > max){
            max = a;
        }
    }
    printf("\n");
    printf("Max = %d", max);